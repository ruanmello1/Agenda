<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Criar conta ou Login</h1>
            <p class="text-center lead">Faça login ou cadastre-se!</p>
            
            <%- include('includes/messages');%>

            <div class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>                    
                    <p>Se você ainda não possui uma conta, preencha os campos abaixo.</p>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                          <small id="emailHelp" class="form-text text-muted">Seu e-mail não será compartilhado com ninguém.</small>
                        </div>
                        <div class="form-group">
                          <label>Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>
                </div>

                <div class="col-lg">
                    <h4>Faça seu login</h4>
                    <p>Se você já possui uma conta, faça seu login abaixo.</p>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                          <small id="emailHelp" class="form-text text-muted">Seu e-mail não será compartilhado com ninguém.</small>
                        </div>
                        <div class="form-group">
                          <label>Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>
                </div>
            </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer')%>